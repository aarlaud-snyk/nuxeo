<?xml version="1.0"?>
<component name="org.nuxeo.ecm.annotation.schemas">

  <require>org.nuxeo.ecm.core.CoreExtensions</require>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="schema">
    <schema name="annotation" src="schemas/annotation.xsd" prefix="annotation"/>
    <schema name="externalAnnotation" src="schemas/externalAnnotation.xsd" prefix="externalAnnotation" />
  </extension>

  <extension target="org.nuxeo.ecm.core.schema.TypeService" point="doctype">

    <facet name="ExternalAnnotation">
      <schema name="externalAnnotation" />
    </facet>

    <doctype name="Annotation" extends="Document">
      <schema name="dublincore"/>
      <schema name="annotation"/>
      <facet name="HiddenInNavigation"/>
    </doctype>

  </extension>

</component>
